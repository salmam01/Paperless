{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/Logs/Paperless-.txt",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Json.JsonFormatter"
        }
      }
    ]
  },
  "Endpoints": {
    "Rest": "http://paperless-rest:8080/api/document/"
  },
  "RabbitMq": {
    "Host": "paperless-rabbitmq",
    "Port": 5672,
    "User": "admin",
    "Password": "admin123"
  },
  "MqPublisher": {
    "ExchangeName": "services.fanout",
    "MaxRetries": 3
  },
  "OcrQueue": {
    "QueueName": "ocr.queue",
    "MaxRetries": 3
  },
  "SummaryQueue": {
    "QueueName": "summary.queue",
    "ExchangeName": "services.fanout",
    "MaxRetries": 3
  },
  "IndexingQueue": {
    "QueueName": "indexing.queue",
    "ExchangeName": "services.fanout",
    "MaxRetries": 3
  },
  "MinIo": {
    "Endpoint": "paperless-minio:9000",
    "Username": "admin",
    "Password": "admin123",
    "BucketName": "documents"
  },
  "Ocr": {
    "DefaultLanguage": "deu+eng",
    "DefaultOem": "LstmOnly",
    "DefaultPsm": "Auto",
    "DefaultDpi": 300,
    "UseDeskew": true,
    "UseAdaptiveThreshhold": true,
    "UseSharpen": true,
    "MaxPages": 50
  },
  "GenAI": {
    "ApiKey": "SECRET",
    "ModelName": "gemini-2.0-flash",
    "ApiUrl": "https://generativelanguage.googleapis.com/v1beta/models/{0}:generateContent",
    "MaxRetries": 3,
    "TimeoutSeconds": 30
  }
}
