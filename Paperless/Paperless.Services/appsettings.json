{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/Logs/Paperless-.txt",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Json.JsonFormatter"
        }
      }
    ]
  },
  "REST": {
    "Url": "http://paperless-rest:8080/api/document/"
  },
  "ElasticSearch": {
    "Url": "http://paperless-elasticsearch:9200",
    "Index": "documents",
    "Username": "",
    "Password": "admin123"
  },
  "MinIO": {
    "Endpoint": "paperless-minio:9000",
    "Username": "admin",
    "Password": "admin123",
    "BucketName": "documents"
  },
  "GenAI": {
    "ApiKey": "SECRET",
    "ModelName": "gemini-2.0-flash",
    "ApiUrl": "https://generativelanguage.googleapis.com/v1beta/models/{0}:generateContent",
    "MaxRetries": 3,
    "TimeoutSeconds": 30
  },
  "OCR": {
    "DefaultLanguage": "deu+eng",
    "DefaultOem": "LstmOnly",
    "DefaultPsm": "Auto",
    "DefaultDpi": 300,
    "UseDeskew": true,
    "UseAdaptiveThreshhold": true,
    "UseSharpen": true,
    "MaxPages": 50
  },
  "RabbitMQ": {
    "Host": "paperless-rabbitmq",
    "Port": 5672,
    "User": "admin",
    "Password": "admin123",
    "ExchangeName": "document.events"
  },
  "MQPublisher": {
    "RoutingKeys": [
      "document.ocr.completed",
      "document.summary.completed"
    ]
  },
  "OCRListener": {
    "QueueName": "ocr.queue",
    "RoutingKeys": [
      "document.uploaded"
    ],
    "MaxRetries": 3
  },
  "SummaryListener": {
    "QueueName": "summary.queue",
    "RoutingKeys": [
      "document.ocr.completed"
    ],
    "MaxRetries": 3
  },
  "IndexingListener": {
    "QueueName": "indexing.queue",
    "RoutingKeys": [
      "document.summary.completed",
      "document.deleted",
      "document.deleted.all"
    ],
    "MaxRetries": 3
  }
}
